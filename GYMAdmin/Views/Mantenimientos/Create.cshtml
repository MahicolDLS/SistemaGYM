@model GYMAdmin.Models.Mantenimiento

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper">
<h2>Cargar Datos</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
